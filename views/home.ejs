<%- include("partials/header"); -%>
<h1 style="text-align: center; color: #f13d10">Home</h1>
<p style="font-weight: 550; text-align: center"> <%= startingContent %> </p>


<%  posts.forEach(function(post){ %>

<div class="container container-fluid">
  <div class="row">
    <div class="col-md-9 mb-3">
      <h3><%=post.title%></h3>
    </div>
    <div class="col-md-1"></div>
    <div class="col-md-2 mb-4">
      <a href="/posts/<%=post._id%>" class="btn btn-info btn-sm">Read More</a>
    </div>
  </div>
</div>

<% }); %>
<%- include("partials/footer"); -%>